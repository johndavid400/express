%h1.left Listing Channels
= link_to 'New Entry Type', new_admin_channel_path, :class => "right btn btn-default"

%table.table.table-striped.table-bordered
  %thead
    %tr
      %th Title
      %th Slug
      %th Status
      %th

  %tbody
    - @channels.each do |channel|
      %tr
        %td= link_to channel.title, edit_admin_channel_path(channel)
        %td= channel.slug
        %td= channel.status
        %td= link_to fa_icon("times"), admin_channel_path(channel), method: :delete, class: "red", data: { confirm: 'Are you sure?'}

