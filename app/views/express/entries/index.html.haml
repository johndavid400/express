%h1.left
  = params[:channel].present? ? Channel.find(params[:channel]).title : "All"
  Entries

.right
  = link_to "#{fa_icon('plus', :class => 'green')} New #{channel_name(params[:channel])}".html_safe, express.new_entry_path(channel_id: params[:channel]), :class => "btn btn-default pad-left"

%table.table.table-striped.table-bordered
  %thead
    %tr
      %th Title
      %th Slug
      %th Status
      %th User
      %th Channel
      %th

  %tbody
    - @entries.each do |entry|
      %tr
        %td= link_to entry.title, express.edit_entry_path(entry)
        %td= entry.slug
        %td= entry.status
        %td= entry.user_id
        %td= entry.channel
        %td= link_to fa_icon("times"), express.entry_path(entry), method: :delete, class: "red", data: { confirm: 'Are you sure?' }

